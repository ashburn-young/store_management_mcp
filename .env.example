# Google Business Analytics MCP Server Environment Variables

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-azure-openai-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
# Note: Authentication uses DefaultAzureCredential (Azure CLI, Managed Identity, etc.)

# Google API Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account.json

# Database Configuration (if using persistent storage)
DATABASE_URL=sqlite:///google_business_analytics.db

# Development Settings
ENVIRONMENT=development
DEBUG_MODE=false
USE_MOCK_DATA=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/mcp_server.log

# MCP Server Ports
COLLECTION_SERVER_PORT=3001
AGGREGATION_SERVER_PORT=3002

# Dashboard Configuration
STREAMLIT_PORT=8501
DASHBOARD_REFRESH_INTERVAL=15

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=executives@yourcompany.com
ALERT_EMAIL_PASSWORD=your_email_password_here

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=900
